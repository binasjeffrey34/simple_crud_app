<style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      text-align: center;
    }
    .container {
      margin: 0 auto; 
      width: 50%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .actions {
      display: flex;
    }
    .actions a {
      margin-right: 10px;
    }
    .delete-button {
      margin-top: 10px;
    }
</style>

<p style="color: green"><%= notice %></p>

<%= render @book %>

<div class="container">
  <div class="actions">
    <%= link_to "Edit", edit_book_path(@book) %> |
    <%= link_to "Back", books_path %>
  </div>
  <div class="delete-button">
    <%= button_to "Delete", @book, method: :delete %>
  </div>
</div>
